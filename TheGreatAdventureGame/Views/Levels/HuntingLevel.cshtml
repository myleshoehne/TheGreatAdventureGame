@model Models.Levels.HuntingLevel

<h1>Hunting Level</h1>

<div class="inventory-grid">
    @foreach (var item in Model.EnvironmentItems)
    {
        <div class="inventory-item-container">
            <a style="@Helpers.ItemHelper.GetRarityStyle(item.Value.Rarity)" href="@Url.Action("", "", new { })">
                <img class="inventory-item" src="@Url.Content(item.Value.ImageUrl)" alt="@item.Value.Name" />
            </a>
            <div class="probability-overlay">
                <span>@item.Key%</span>
            </div>
        </div>
    }
</div>

<style>
    /* Inventory Grid */
    .inventory-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
        max-width: 140px;
    }

    /* Inventory Item Container */
    .inventory-item-container {
        position: relative;
        width: 60px;
        height: 60px;
        border: 2px solid gray;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        cursor: pointer;
        transition: transform 0.1s ease-in-out;
    }

        .inventory-item-container:hover {
            transform: scale(1.1);
        }

    /* Item Image */
    .inventory-item {
        width: 50px;
        height: 50px;
        object-fit: cover;
    }

    /* Probability Overlay */
    .probability-overlay {
        position: absolute;
        bottom: 5px;
        left: 5px;
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        font-size: 12px;
        border-radius: 4px;
        padding: 2px 5px;
    }

</style>